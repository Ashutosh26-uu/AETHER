{
  "version": 2,
  "builds": [
    {
      "src": "backend/universal_backend.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/universal_backend.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task/backend"
  },
  "functions": {
    "backend/universal_backend.py": {
      "runtime": "python3.9"
    }
  }
}